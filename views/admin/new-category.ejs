       <!-- partial -->
       <div class="main-panel">
         <div class="content-wrapper">
           
            <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Add new category</h4>
                <p class="card-description">
                
                </p>
                <form class="forms-sample" action="" method="post" enctype="multipart/form-data">
  <% if (typeof message !== 'undefined') { %>
    <p class="text-center text-danger general-message display-3"><%= message %><span class="text-danger"><br></span></p>
  <% } %>
  <div class="form-group">
    <label for="categoryName" class="form-label">Category Name</label>
    <input type="text" class="form-control" id="categoryName" name="categoryName" value="New Category Name" required>
    <div id="categoryNameError" class="error-message text-danger"></div>
  </div>
  <div class="form-group">
    <label for="specification" class="form-label">Category Specification</label>
    <input type="text" class="form-control" id="specification" name="specification" value="New Specification" required>
  </div>
  <div class="form-group">
    <label for="coverPic" class="form-label">Cover Pic</label>
    <input class="form-control" type="file" id="coverPic" name="coverPic" accept="image/*" required>
    <div id="coverPicError" class="error-message text-danger"></div>
  </div>
  <button type="submit" class="btn btn-primary mr-2">Add Category</button>
</form>

              
                
              </div>
            </div>
          </div>
             
           </div>
           
         
         
         <!-- partial -->
       </div>
