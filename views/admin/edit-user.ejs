       <!-- partial -->
       <div class="main-panel">
         <div class="content-wrapper">
           
            <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Edit User <%= user.name %>    </h4>
                <img class="rounded-circle" src="/images/userProfile/<%=user.image%>" alt="" style="width: 60px; height: 60px;">
                
                    
                
                <p class="card-description">
                
                </p>
                <form class="forms-sample" action="" method="post" >
                    <div class="form-group">

                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control" name="name" value="<%= user.name %>" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Phone</label>
                        <input type="tel" class="form-control" name="mno" value="<%= user.mobile %>" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email address</label>
                        <input type="email" class="form-control" name="email" value="<%= user.email %>" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <Br>
                    <label>verified</label>
                       <input type="radio" name="verify" value="1" <% if(user.is_varified == 1){ %> checked <% } %> >
                       <label>unverified</label>
                       <input type="radio" name="verify" value="0" <% if(user.is_varified == 0){ %> checked <% } %>>   
                   </div>
                   <div class="form-group">
                    <label class="form-label">User Controll</label>
                    <Br>
                <label> Active </label>
                   <input type="radio" name="block" value="1" <% if(user.is_block == 1){ %> checked <% } %> >
                   <label> Block </label>
                   <input type="radio" name="block" value="0" <% if(user.is_block == 0){ %> checked <% } %>>
                   
               </div>
                    
                    <input type="hidden" name="id" value="<%= user._id %>">
                    
                   
                    <button type="submit" class="btn btn-primary mr-2">Update User</button>
                </form>
                
              </div>
            </div>
          </div>
             
           </div>
           
         
         
         <!-- partial -->
       </div>
       <!-- main-panel ends -->
     </div>
     <!-- page-body-wrapper ends -->
   </div>
   <!-- container-scroller -->
   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var blockRadios = document.querySelectorAll('input[name="block"]');
        for (var i = 0; i < blockRadios.length; i++) {
            blockRadios[i].addEventListener('change', function() {
                if (this.value == 0) {
                    Swal.fire({
                        title: 'Are you sure?',
                        text: 'You are blocking the user!',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, block them!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // This is where you can submit the form to block the user
                            document.querySelector('form').submit();
                        }
                    });
                }
            });
        }
    });
</script>


