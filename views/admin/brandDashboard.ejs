<%- include("../layouts/adminheader.ejs") %>




<body>
   <div class="container-scroller d-flex">
     <!-- partial:./partials/_sidebar.html -->
     <%- include("../layouts/adminSideBar.ejs") %>
     <!-- partial -->
     <div class="container-fluid page-body-wrapper">
       <!-- partial:./partials/_navbar.html -->
       <nav class="navbar col-lg-12 col-12 px-0 py-0 py-lg-4 d-flex flex-row">
         <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
           <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
             <span class="mdi mdi-menu"></span>
           </button>
           <div class="navbar-brand-wrapper p-4">
             <!-- <a class="navbar-brand brand-logo" href="index.html"><img src="images/logo.png" alt="logo"/></a>
             <a class="navbar-brand brand-logo-mini" href="index.html"><img src="images/logo-mini.png" alt="logo"/></a> -->
           </div>
           <h4 class="font-weight-bold mb-0 d-none d-md-block mt-1">Brand Dashboard</h4>
           <ul class="navbar-nav navbar-nav-right">
             <li class="nav-item  p-2">
              
              <ul class="navbar-nav navbar-nav-right">
                <li class="nav-item  p-2">
                  <h4 class="mb-0 font-weight-bold d-none d-xl-block  text-uppercase" id="clock" style="color: #fcfcfc;"></h4>
                </li>
        
              </ul>
              <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                <span class="mdi mdi-menu"></span>
              </button>
            </div>

            <div class="navbar-menu-wrapper navbar-search-wrapper d-none d-lg-flex align-items-center">
              <ul class="navbar-nav mr-lg-2">
                <li class="nav-item nav-search d-none d-lg-block">
                 
                    <form class="input-group">
                      <input type="text" class="form-control" name="search" placeholder="Search Brand" aria-label="search" aria-describedby="search">

                    <button type="submit" class="btn btn-outline-secondary btn-rounded btn-icon">
                      <i class="mdi mdi-account-search-outline text-success"></i>                          
                    </button>
                   
                    </form>
                  
                  
                </li>
              </ul>
         
           <ul class="navbar-nav navbar-nav-right">
             <li class="nav-item nav-profile dropdown">
               <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                
                 <span class="nav-profile-name">Admin</span>
               </a>
               <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                
                 <a class="dropdown-item" href="/admin/logout">
                   <i class="mdi mdi-logout text-primary"></i>
                   Logout
                 </a>
               </div>
             </li>
      
           </ul>
         </div>
       </nav>
       <!-- partial -->
       <div class="main-panel">
         <div class="content-wrapper">
           
             <div class="col-12 col-xl-6 grid-margin stretch-card">
              <div class="mb-3">
                <a href="/admin/new-brand" class="btn btn-outline-dark btn-icon-text">
                    <i class="mdi mdi-library-plus btn-icon-prepend mdi-36px"></i>
                    <span class="d-inline-block text-left">
                        <small class="font-weight-light d-block">create new brand</small>
                        Add brand
                    </span>
                </a>
            
                <button class="btn btn-outline-dark btn-icon-text ">
                    <i class="mdi mdi-layers btn-icon-prepend mdi-36px"></i>
                    <span class="d-inline-block text-left">
                        <small class="font-weight-light d-block">brand Count </small>
                        <%=brandCount%>
                    </span>
                </button>
            </div>
            
            
               
             </div>
             <div class="col-lg-12 grid-margin stretch-card" >
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">brand information</h4>
                  <p class="card-description">
                    brand are <code> listed here</code>
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered" id="user-table">
                      <thead>
                          <tr class="text-primary">
                              <th scope="col">brandName</th>
                              <th scope="col">Picture </th>
                              <th scope="col">Description </th>
                              <th scope="col">Status</th>
                              <th scope="col">Action</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% if(brand.length > 0){ %>
                              <% for(let i=0;i<brand.length;i++){ %>
                                  <tr>
                                      <td><%= brand[i].brandName %></td>
                                      <td>
                                         <img class="" src="/images/brand/<%= brand[i].coverPic %>" alt="<%= brand[i].coverPic %>" style="width: 60px; height: 60px;">
                                      </td>
                                      <td><%= brand[i].specification %></td>
                                      
                                      <td>
                                        <%if(brand[i].is_block == 0){%>
                                          <p>blocked <i class="mdi mdi-thumb-down" style="color: rgb(255, 3, 3);"></i></p>
                                          <%} else{ %>
                                          <p>Active <i class="mdi mdi-thumb-up" style="color: rgb(106, 255, 0);"></i></p> 
                                          <%} %>
                                      </td>
                                      <td>
                                        <a class="btn btn-outline-warning btn-sm btn-fw" href="/admin/edit-brand?id=<%= brand[i]._id %>">Edit</a>
                                      </td>
                                  </tr>
                              <% } %>
                          <% } else { %>
                              <tr>
                                  <td colspan="8">brand Not Found</td>
                              </tr>
                          <% } %>
                      </tbody>
                  </table>
                    <!-- Pagination Container -->
                  <div class="pagination-container ">
                       <br>
                         <% for(let j=1; j <= totalPages; j++){ %>
                           <a href="?page=<%= j %>">
                             <button type="button" class="btn btn-primary"><%= j %></button>
                           </a>
                         <% } %>
                  </div>

                  </div>
                </div>
              </div>
            </div>
           </div>
           
         
         
         <!-- partial -->
       </div>
       <!-- main-panel ends -->
     </div>
     <!-- page-body-wrapper ends -->
   </div>
   <!-- container-scroller -->


<%- include("../layouts/adminfooter.ejs") %>