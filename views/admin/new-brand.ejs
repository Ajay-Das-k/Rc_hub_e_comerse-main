       <!-- partial -->
       <div class="main-panel">
         <div class="content-wrapper">
           
            <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Add new brand</h4>
                <p class="card-description">
                
                </p>
                <form class="forms-sample" action="" method="post" enctype="multipart/form-data">
  <% if (typeof message !== 'undefined') { %>
    <p class="text-center text-danger general-message display-3"><%= message %><span class="text-danger"><br></p>
  <% } %>
  <div class="form-group">
    <label for="brandName" class="form-label">Brand Name</label>
    <input type="text" class="form-control" id="brandName" name="brandName" value="New Brand Name" required>
    <div id="brandNameError" class="error-message text-danger"></div>
  </div>
  <div class="form-group">
    <label for="specification" class="form-label">Brand Specification</label>
    <input type="text" class="form-control" id="specification" name="specification" value="New Specification" required>
    <div id="specificationError" class="error-message text-danger"></div>
  </div>
  <div class="form-group">
    <label for="coverPic" class="form-label">Cover Pic</label>
    <input class="form-control" type="file" id="coverPic" name="coverPic">
  </div>

  <button type="submit" class="btn btn-primary mr-2">Add brand</button>
</form>

              
                
              </div>
            </div>
