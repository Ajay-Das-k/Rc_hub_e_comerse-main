   <!-- container-scroller -->
   <script>
      function handleMessage() {
    const messageElement = document.querySelector('.general-message');
    if (messageElement) {
      setTimeout(function () {
        messageElement.textContent = '';
      }, 3000); // Hide general message after 3 seconds
    }
  }
  document.addEventListener('DOMContentLoaded', function () {
   
    handleMessage();
  });

    document.addEventListener('DOMContentLoaded', function() {
      function validateBrandName() {
        const brandName = document.getElementById('brandName').value.trim();
        const brandNameError = document.getElementById('brandNameError');
        brandNameError.textContent = '';
  
        if (brandName.length < 3) {
          brandNameError.textContent = "Brand name must be at least 3 characters long.";
        }
      }
  
      function validateBrandSpecification() {
        const specification = document.getElementById('specification').value.trim();
        const specificationError = document.getElementById('specificationError');
        specificationError.textContent = '';
  
        if (specification.length < 3) {
          specificationError.textContent = "Specification must be at least 3 characters long.";
        }
      }
  
      document.getElementById('brandName').addEventListener('blur', validateBrandName);
      document.getElementById('specification').addEventListener('blur', validateBrandSpecification);
    });
  </script>
  

